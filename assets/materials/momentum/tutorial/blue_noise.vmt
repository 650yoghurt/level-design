"UnlitGeneric"
{
	"$basetexture" "momentum/tutorial/blue_noise"

	"$translucent" 1
	"$alpha" 0.5

    "$translate" "[0.0 0.0]"
	"$scale2" "[3 3]"

    "Proxies"
    {
        // Meanwhile, the screen noise is always changing locationrandomly,
        // which makes it look like animated static.
        "UniformNoise"
        {
            "minVal" 0.0
            "maxVal" 1.0
            "resultVar" "$translate[0]"            
        }
        "UniformNoise"
        {
            "minVal" 0.0
            "maxVal" 1.0
            "resultVar" "$translate[1]"            
        }
        "TextureTransform"
        {
            "translateVar" "$translate"
            "scaleVar" "$scale2"
            "resultVar" "$basetexturetransform"
        }

    }	
}
